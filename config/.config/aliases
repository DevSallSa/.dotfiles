alias visudo="sudo /usr/sbin/visudo"
alias manger="echo je mange"
alias vv="vim ~/.vimrc"
alias ni="nvim ~/.config/nvim/init.lua"
alias nz="nvim ~/.zshrc"
alias ns="nvim $CUSTOM_SCRIPTS_DIR"
alias als="nvim $XDG_CONFIG_HOME/aliases"
alias ll="ls -lh --color"
alias snapRefresh="sudo cp -r /var/lib/snapd/desktop/applications/ /home/$USER/.local/share/applications"
alias updateFonts="fc-cache -fv /home/$USER/.local/share/fonts"
alias folder-size="du -sh"
alias gdb="gdb -n -x $XDG_CONFIG_HOME/gdb/init"
alias wget="wget --hsts-file=$XDG_DATA_HOME/wget-hsts"
alias yarn="yarn --use-yarnrc $XDG_CONFIG_HOME/yarn/config"
